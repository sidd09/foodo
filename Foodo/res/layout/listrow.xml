<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="54px"
  android:orientation="horizontal">
  <!--
  	<ImageView  android:src="@drawable/restlogo"
   			android:layout_width="95px"
   			android:layout_height="54px"
   	/>
      -->
   	<LinearLayout
   	 xmlns:android="http://schemas.android.com/apk/res/android"
   	 android:layout_width="fill_parent"
  	 android:layout_height="54px"
  	 android:orientation="vertical">
  		
   		<TextView android:id="@+id/restaurant"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:textSize="18sp"
         	android:textStyle="bold"
   			android:text="@string/no_rest" 
   			android:layout_marginLeft="15px"/>
   			
   		<LinearLayout
   		     xmlns:android="http://schemas.android.com/apk/res/android"
   	 		 android:layout_width="fill_parent"
  	 		 android:layout_height="54px"
  	 		 android:orientation="horizontal" android:paddingLeft="15px">
  			
  			<TextView android:id="@+id/ReRating"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
			/>
  			
  			<ImageView android:id="@+id/ReStar1"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/star"/>
			<TextView android:id="@+id/reAddress"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:layout_marginLeft="5px"
			/>
			<!--  
			<ImageView android:id="@+id/ReStar2"
			  	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/star"/>
			<ImageView android:id="@+id/ReStar3"
			  	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/star"/>
  			-->
  		</LinearLayout>
    </LinearLayout>
</LinearLayout>
